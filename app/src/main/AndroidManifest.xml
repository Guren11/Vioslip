<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="axis.com.vioslip">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/applogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" android:label="VioSlip" android:theme="@style/AppTheme.NoTitle"/>


        <!-- Student End -->
        <activity android:name=".Student.StudentActivity" android:label="Student"/>
        <activity android:name=".Student.StudentRegister" android:label="Student Register" android:theme="@style/AppTheme.NoTitle"/>
        <activity android:name=".Student.MyViolationActivity" android:theme="@style/AppTheme.NoTitle"/>
        <activity android:name=".Student.MyViolationSingleView" android:theme="@style/AppTheme.NoTitle"/>
        <activity android:name=".Student.StudentChangePass" android:label="Change Password"/>
        <!-- Professors End -->
        <activity android:name=".Professor.ProfActivity" android:label="Professor" android:theme="@style/AppTheme.NoTitle"/>
        <activity android:name=".Professor.ViolateStudent" android:theme="@style/AppTheme.NoTitle"/>
        <activity android:name=".Professor.ProfChangePass" android:label="Change Password"/>
        <activity android:name=".Professor.ViolationListProf" android:theme="@style/AppTheme.NoTitle"/>


        <!-- Admin End -->
        <activity android:name=".Admin.AdminActivity" android:label="Admin" android:theme="@style/AppTheme.NoTitle"/>
        <!-- Admin Prof End -->
        <activity android:name=".Admin.Prof.ProfessorListActivity" android:theme="@style/AppTheme.NoTitle"/>
        <activity android:name=".Admin.Prof.AddProf" android:theme="@style/AppTheme.NoTitle"/>
        <!-- Admin Violation End -->
        <!-- Admin Add Violation w/ QR Code -->
        <activity android:name=".Admin.Violations.ViolationsList" android:theme="@style/AppTheme.NoTitle"/>
        <activity android:name=".Admin.Violations.AddViolationV2" android:theme="@style/AppTheme.NoTitle"/>
        <activity android:name=".Admin.Violators.ViolatorsListActivity" android:theme="@style/AppTheme.NoTitle"/>
        <activity android:name=".Admin.Student.StudentListActivity" android:theme="@style/AppTheme.NoTitle"/>
        <activity android:name=".Admin.Violations.ViolationSingleView" android:theme="@style/AppTheme.NoTitle"/>


    </application>

</manifest>