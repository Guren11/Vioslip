<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"
        ></include>

    <TextView
        android:id="@+id/myviosingle_violationname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="73dp"
        android:layout_marginTop="33dp"
        android:text="Violation Name:"
        android:layout_below="@+id/tool_bar"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/myviosingle_pname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Prof who reported"
        android:layout_below="@+id/myviosingle_violationname"
        android:layout_alignStart="@+id/myviosingle_violationname" />

    <TextView
        android:id="@+id/myviosingle_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/myviosingle_pname"
        android:layout_alignStart="@+id/myviosingle_pname" />

    <Button
        android:id="@+id/btn_qrcode"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Clear w/ QR Code"
        android:background="@drawable/rounded_button_register"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/myviosingle_status"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_qrcode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="@drawable/rounded_button_register"
        android:text="Clear w/ Text Code"
        android:textColor="@color/colorAccent"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_vioinfo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_qrcode"
        android:layout_below="@+id/btn_qrcode"
        android:layout_marginTop="27dp"
        android:background="@drawable/rounded_button_register"
        android:text="Violation Information"
        android:textColor="@color/colorAccent" />
</RelativeLayout>