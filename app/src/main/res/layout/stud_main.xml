<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/alerdialog"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tx_student_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_dp"
        android:layout_marginStart="29dp"
        android:layout_toEndOf="@+id/img_dp"
        android:text="TextView"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <TextView
        android:id="@+id/tx_student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_dp"
        android:layout_alignStart="@+id/tx_student_number"
        android:layout_marginBottom="12dp"
        android:text="TextView"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <Button
        android:id="@+id/btn_student_violations"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="61dp"
        android:background="@drawable/rounded_button_register"
        android:text="My Violations"
        android:textColor="@color/colorAccent"
        android:visibility="visible"
        android:layout_above="@+id/btn_student_changepass"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_student_changepass"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button_register"
        android:textColor="@color/colorAccent"
        android:text="Change Password"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn_student_violations"
        android:layout_marginBottom="171dp" />
</RelativeLayout>