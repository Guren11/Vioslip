<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/ed_layout_oldpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="101dp"
        android:textColorHint="@color/colorAccent"
        android:theme="@style/TextLabel">

        <EditText
            android:id="@+id/ed_stud_oldpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView4"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="33dp"
            android:ems="13"
            android:hint="Old Password"
            android:inputType="textPassword"
            android:textColor="@color/colorAccent"
            android:textColorHighlight="@color/colorAccent"
            android:textColorHint="@color/colorAccent" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/ed_layout_newpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:textColorHint="@color/colorAccent"
        android:theme="@style/TextLabel"
        android:layout_below="@+id/ed_layout_oldpass"
        android:layout_alignStart="@+id/ed_layout_oldpass">

        <EditText
            android:id="@+id/ed_stud_newpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView4"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="33dp"
            android:ems="13"
            android:hint="New Password"
            android:inputType="textPassword"
            android:textColor="@color/colorAccent"
            android:textColorHighlight="@color/colorAccent"
            android:textColorHint="@color/colorAccent" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/ed_layout_confirmpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:textColorHint="@color/colorAccent"
        android:theme="@style/TextLabel"
        android:layout_below="@+id/ed_layout_newpass"
        android:layout_alignStart="@+id/ed_layout_newpass">

        <EditText
            android:id="@+id/ed_stud_confirmpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView4"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="33dp"
            android:ems="13"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textColor="@color/colorAccent"
            android:textColorHighlight="@color/colorAccent"
            android:textColorHint="@color/colorAccent" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btn_stud_change_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ed_layout_confirmpass"
        android:layout_alignStart="@+id/ed_layout_confirmpass"
        android:layout_below="@+id/ed_layout_confirmpass"
        android:layout_marginTop="46dp"
        android:text="Submit"
        android:background="@drawable/rounded_button_register"
        android:textColor="@color/colorAccent"/>

</RelativeLayout>