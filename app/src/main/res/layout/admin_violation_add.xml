<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#34495e">
    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"
        ></include>

    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:id="@+id/textInputLayout2"
        android:textColorHint="@color/colorAccent"
        android:theme="@style/TextLabel"
        android:layout_below="@+id/tool_bar"
        android:layout_centerHorizontal="true">

    <EditText
        android:id="@+id/ed_violationname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tool_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:ems="13"
        android:inputType="textPersonName"
        android:hint="Violation Name" />
    </android.support.design.widget.TextInputLayout>

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/spinner_violationtype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textInputLayout2"
        android:layout_alignStart="@+id/textInputLayout2"
        android:layout_below="@+id/textInputLayout2"
        android:layout_marginTop="24dp" />

    <android.support.design.widget.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/spinner_violationtype"
        android:layout_alignStart="@+id/spinner_violationtype"
        android:layout_marginTop="29dp"
        android:layout_alignEnd="@+id/spinner_violationtype"
        android:id="@+id/textInputLayout3"
        android:textColorHint="@color/colorAccent"
        android:theme="@style/TextLabel">

        <EditText
            android:id="@+id/ed_sanctionname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/spinner_violationtype"
            android:layout_alignStart="@+id/spinner_violationtype"
            android:layout_below="@+id/spinner_violationtype"
            android:layout_marginTop="33dp"
            android:ems="10"
            android:hint="Sanction Name"
            android:inputType="textPersonName" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/textInputLayout3"
        android:layout_alignStart="@+id/textInputLayout3"
        android:layout_alignEnd="@+id/textInputLayout3"
        android:id="@+id/textInputLayout4"
        android:textColorHint="@color/colorAccent"
        android:theme="@style/TextLabel">

        <EditText
            android:id="@+id/ed_santionsched"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textInputLayout3"
            android:layout_alignStart="@+id/textInputLayout3"
            android:layout_below="@+id/textInputLayout3"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:hint="Sanction Sched"
            android:inputType="textPersonName" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textInputLayout4"
        android:layout_alignStart="@+id/textInputLayout4"
        android:layout_marginTop="25dp"
        android:layout_alignEnd="@+id/textInputLayout4"
        android:id="@+id/textInputLayout5"
        android:textColorHint="@color/colorAccent"
        android:theme="@style/TextLabel">

        <EditText
            android:id="@+id/ed_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textInputLayout4"
            android:layout_alignStart="@+id/textInputLayout4"
            android:layout_below="@+id/textInputLayout4"
            android:layout_marginTop="18dp"
            android:ems="10"
            android:hint="Location"
            android:inputType="textPersonName" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btn_admin_add_vio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textInputLayout5"
        android:layout_alignStart="@+id/textInputLayout5"
        android:layout_below="@+id/textInputLayout5"
        android:layout_marginTop="23dp"
        android:text="Submit"
        android:textColor="@color/colorAccent"
        android:background="@drawable/rounded_buttton_violate"/>


</RelativeLayout>